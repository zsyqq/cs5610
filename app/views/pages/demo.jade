doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title web learning
    link(href="/libs/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
    script(src="/libs/jquery/dist/jquery.min.js")
    script(src="/libs/bootstrap/dist/js/bootstrap.min.js")
    script(src="http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js")
    link(rel="stylesheet", type="text/css", href="/css/normalize.css")
    link(rel="stylesheet", type="text/css", href="/css/demo.css")
    link(rel="stylesheet", type="text/css", href="/css/component.css")
    link(rel="stylesheet", type="text/css", href="/css/style4.css")
    link(rel="stylesheet", type="text/css", href="/css/style3.css")
    script(type="text/javascript", src="/js/modernizr.custom.86080.js")
    script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")
    link(rel="stylesheet", type="text/css", href="/css/search.css")
    script(src='/js/admin.js')
 

  body.demo-6


    #d_container.d_container.intro-effect-grid
      
      header.header
        ul.grid
          li
            h2 Javascript
          li
            h2 jQuery
          li
            h2 ASP.NET
          li
            h2 NodeJS
          li
            h2 Web Learning
          li
            h2 AngularJS
        .bg-img
          ul.cb-slideshow
            li
              span Image 01
              div
                h3 Javascript
            li
              span Image 02
              div
                h3 jQuery
            li
              span Image 03
              div
                h3 HTML5
            li
              span Image 04
              div
                h3 NodeJS
            li
              span Image 05
              div
                h3 AngularJS
            li
              span Image 06
              div
                h3 CSS
        .title
    
          h1 Start Learn
          p.subline Project for Web Development
          p
            | by
            strong Shuyi Zhang
            | &#8212; Posted in
            strong Openshift
            | on
            strong DEC 6, 2014
          p
            a.current-demo(href="#slide-main") Course Menu
      button.trigger(data-info="Click to see more")
        span Trigger
 
      section.cn-container
        #slide-main.cn-slide
          h2 Courses
          nav
            each cat in categories
              a(href="#slide-#{cat.name}", style='background:url(/img/#{categories.indexOf(cat)+1}.jpg) no-repeat center center') #{cat.name}
          
             
         
        each cat in categories
          .cn-slide.cn-slide-sub(id='slide-'+ cat.name)
            h2 #{cat.name}
            a.cn-back(href="#slide-main") Back
            nav
              if cat.movies && cat.movies.length>0
                each mv in cat.movies 
                  .col-sm-12.col-md-6
                    .thumbnail
                      a(href="#slide-#{cat.name}-#{mv._id}")
                        if mv.poster.indexOf('http:') > -1
                          img(src="#{mv.poster}", alt="#{mv.title}")
                        else 
                          img(src='/upload/#{mv.poster}',alt='#{mv.title}')
                      .caption 
                        p #{mv.title}  
        each cat in categories
          if cat.movies && cat.movies.length>0
            each mv in cat.movies
              .cn-slide(id='slide-'+cat.name+'-'+mv._id)
                p #{mv.title}
                a.cn-back(href="#slide-#{cat.name}") Back
                .cn-content(style="background:#80B8CE url(#{mv.poster}) no-repeat center center")
                  p #{mv.summary}
                  hr
                  if user 
                    a(href='/movie/#{mv._id}') Watch Course Video
                  else 
                    p Watch Course Video? login first !


      include ../includes/header

      #morphsearch.morphsearch
        form.morphsearch-form(method='GET',action="/results")
          input.morphsearch-input(type="text", placeholder="Search...",name='q')
          button.morphsearch-submit(type="submit") Search
        .morphsearch-content
          .dummy-column
            h2 Popular Users
            each user in pvusers               
              a.dummy-media-object(href="/user/#{user._id}",target='_blank')
                
                img.round(src='/upload/#{user.poster}') 
                h3 #{user.name}

          .dummy-column
            h2 Recent
            each mv in movies
              a.dummy-media-object(href='/movie/#{mv._id}')
                img(src='#{mv.poster}')
                h3 #{mv.title}
          .dummy-column
            h2 Popular 
            each pvmv in pvmvs
              a.dummy-media-object(href="/movie/#{pvmv._id}")
                img(src="#{pvmv.poster}")
                h3 #{pvmv.title}

        span.morphsearch-close
    
   
    script(src="/js/search.js")
    script(src="/js/classie.js")
    script(src="/js/index.js")


  
