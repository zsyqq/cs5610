extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/movie", enctype="multipart/form-data")
        .form-group
          label.col-sm-2.control-label Sycrynizse
          .col-sm-10
            input#search-txt.form-control(type="text")
          .col-sm-2
            input#search-btn(type='button' value='Fetch Video Information')
        if movie._id
          input(type="hidden", name="movie[_id]", value=movie._id)
        .form-group
          label.col-sm-2.control-label(for="inputCategory") Course Category
          .col-sm-10
            input#inputCategory.form-control(type="text", name="movie[categoryName]", value=movie.categoryName)
        .form-group
          label.col-sm-2.control-label Category Select
          each cat in categories
            label.radio-inline
              if movie.category
                input(type="radio", name="movie[category]", value=cat._id, checked=cat._id.toString()==movie.category.toString())
              else
                input(type="radio", name="movie[category]", value=cat._id)
              | #{cat.name}
        .form-group
          label.col-sm-2.control-label(for="inputTitle") Course Name
          .col-sm-10
            input#inputTitle.form-control(type="text", name="movie[title]", value=movie.title)

        //- .form-group
        //-   label.col-sm-2.control-label(for="inputDoctor") Channel
        //-   .col-sm-10
        //-     input#inputDoctor.form-control(type="text", name="movie[doctor]", value=movie.doctor)
        //- .form-group
        //-   label.col-sm-2.control-label(for="inputCountry") Country
        //-   .col-sm-10
        //-     input#inputCountry.form-control(type="text", name="movie[country]", value=movie.country)
        //- .form-group
        //-   label.col-sm-2.control-label(for="inputLanguage") Language
        //-   .col-sm-10
        //-     input#inputLanguage.form-control(type="text", name="movie[language]", value=movie.language)
        .form-group
          label.col-sm-2.control-label(for="inputPoster") Poster
          .col-sm-10
            input#inputPoster.form-control(type="text", name="movie[poster]", value=movie.poster)
        .form-group
          label.col-sm-2.control-label(for="uploadPoster") Upload Poster
          .col-sm-10
            input#uploadPoster(type="file", name="uploadPoster")
        .form-group
          label.col-sm-2.control-label(for="inputFlash") Source 
          .col-sm-10
            input#inputFlash.form-control(type="text", name="movie[flash]", value=movie.flash)
        .form-group
          label.col-sm-2.control-label(for="inputYear") Create Year
          .col-sm-10
            input#inputYear.form-control(type="text", name="movie[year]", value=movie.year)
        .form-group
          label.col-sm-2.control-label(for="inputSummary") Introduction
          .col-sm-10
            textarea#inputSummary.form-control(type="text", name="movie[summary]")= movie.summary
        .form-group
          label.col-sm-2.control-label(for="viewRate") View Rates
          .col-sm-10
            input#viewRate.form-control(type='text',name='movie[viewrate]',value=movie.viewrate)
          
            
        .form-group
          label.col-sm-2.control-label(for="FavoriteRate") Favorite Rates
          .col-sm-10
            input#FavoriteRate.form-control(type='text',name='movie[favrate]',value=movie.favrate)
          
            
        
        .form-group
          label.col-sm-2.control-label(for="LikeRate") Like Rates
          .col-sm-10
            input#LikeRate.form-control(type='text',name='movie[likerate]',value=movie.likerate)
          
           
        .form-group
          label.col-sm-2.control-label(for="DislikeRate") Dislike Rates
          .col-sm-10
            input#DislikeRate.form-control(type='text',name='movie[dislrate]',value=movie.dislrate)
          
            

        .form-group
          .col-sm-offset-2.col-sm-10
          button.btn.btn-default(type="submit") Upload
  script(src='/js/admin.js')